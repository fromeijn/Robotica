task main()
{
	SetSensorLowspeed(S1);
	//I2CDeviceId	(S1, 0x02);
	byte bufferin[1]; //write
	bufferin[0] = 0x02; //addres slave
	byte bufferout[]; //read
	byte count = 12; //read plus 1
	while((!FALSE)){
		I2CBytes(S1, bufferin, count, bufferout);
		ClearScreen();
		TextOut(0, LCD_LINE1, "---------------" );
		TextOut(0, LCD_LINE2, bufferout);
		TextOut(0, LCD_LINE3, "---------------" );
		Wait(100);
	}
}



